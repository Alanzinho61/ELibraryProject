@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<table class="table table-sm">

    <a href="/Admin/Category/Add" class="btn btn-success">Yeni Kitap Ekle</a>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kategori Adi</th>
            <th scope="col">Kategori Aciklamasi</th>
            <th scope="col">#</th>
            <th scope="col">#</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.BookName</td>
                <td>@item.BookStock</td>
                <td><a href="/Admin/Category/Update/@item.Id" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Admin/Category/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>

</table>